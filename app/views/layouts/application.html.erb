<!DOCTYPE html>
<html>
  <head>
    <title>PhotoCon</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <style>
      body {
       background:#e1e8ef; 

      }
     </style>
  </head>

  <body>
     <nav class="navbar navbar-expand-lg navbar-light bg-darck  navbar-custom">
  	  <div class="container">
  	    <div class="navbar-header ">
  	    <%= link_to 'PhotoCon', root_path, class: 'navbar-brand btn  text-white' %>
  	    </div>
  	    <div id="navbar">
          <% if current_user %>
 	        <ul class="nav navbar-inverse navbar-nav pull-right ">


            <li class="nav-item dropdown">
              <div class="btn btn-lg align-middle btn-custom  dropdown-toggle text-white" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
		 <em><%=current_user.first_name %></em>
          <%= image_tag current_user.image_url, alt: current_user.first_name %>
        </div>
        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
            <%= link_to 'New Photo',new_photo_path,class: 'dropdown-item' %>

 	          <%= link_to '   Out   ', logout_path,class: 'dropdown-item', method: :delete %>
            </div>
 	        </ul>
 	       <% end %>
  	    </div>
  	  </div>
  	</nav>

  	<div class="container">
  	  <% flash.each do |key, value| %>
  	    <div class="alert alert-<%= key %>">
  	      <%= value %>
  	    </div>
  	  <% end %>

  	  <%= yield %>
  	</div>









  </body>
</html>
