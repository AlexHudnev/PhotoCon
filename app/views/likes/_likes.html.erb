      <%= form_for [@photo,@photo.likes.build] , remote: true do |f| %>

      <div class="col"><span class=""><%= @photo.rating %></span><span> Likes</span>
        <%= f.submit "â™¥",  class: ' btn-link btn text-danger like'%>
      <% end %>
<%else%>
<div class="col"><span class=""><%= @photo.rating %></span><span> Likes</span>
<%= link_to 'â™¥',
        like_path(like.id),
                    method: :delete,
