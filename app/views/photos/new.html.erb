<h1>Post new Photo</h1>
<hr>


<%= form_for :photo, url: photos_path, :remote => true  do |f| %>

<form class="form-horizontal" role="form">
  <div class="form-group">
    <div class="col-lg-8">
      <%= f.label 'Title:' %> <br>
      <%= f.text_field :name , class: 'form-control',placeholder:'Name',pattern:'[A-Za-zА-Яа-я0-9]{3,}' ,required: true%>
      <label for="Title" class="text-left blockquote-footer ">Minimum 3 characters.</label>
    </div>
    </div>

<div class="collapse" id="upload">
  <span class=" btn-sm btn-link" data-toggle="collapse" data-target="#upload" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation"> Close list </span>
<div class="row">
<% @collection.each do |item| %>

<%if item['photo_807']%>
<div class="col">
<div class="card" style="width: 20rem;">
  <a><img src="<%=item['photo_807']%>" class="card-img-top new " alt="..."> </a>
   <%= f.radio_button :remote_photography_url, item['photo_807'] %>

  </div>
</div>
<%end%>
<%end%>
</div>


</div>



        <div class="col-sm-10">
          <span class="control-fileupload">

            <br>
            <%= f.file_field :photography, accept: 'image/jpeg,image/gif,image/png' %>
            <label for="file1" class="text-left blockquote-footer ">Please choose a file on your computer.</label>
          </span>
Or upload from VK
<span class=" btn-sm btn-link" data-toggle="collapse" data-target="#upload" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation"> Open list </span>
        </div>



<hr>
  <%= f.submit "Upload", class: "btn btn-secondary " %>
<% end %>
