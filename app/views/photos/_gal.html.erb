<% @photos.each do |photo| %>

<div clss="col offset-md-4 "
   <% if photo.aasm_state == 'approved' %>

   <% user = User.find(photo.user_id) %>

    <div class="  single_portfolio_text shadow">
       <%= image_tag photo.photography.gallery.url %>

        <div class="portfolio_images_overlay " >
          <a href=<%=photo_path(photo)%>><h6 class="clrd-font text-center">
            <%= photo.name %></h6></a>
          <div class="col-lg  text-danger"><%= I18n.t(:author)%>: <%= link_to "#{user.first_name} #{user.last_name}", user_path(user),class: '' %></div>




           <div class="col  text-primary"><span class="text-danger" ><%= I18n.t(:rating)%>: </span><span class="1votes-count-<%=photo.id%> " ><%= photo.rating %></span> </div>

             <div class="col col-sm  "  >
          <span class="galvotes-count-<%=photo.id%>">
             <%= render '/likes/gal_likes',  photo: photo %></span>
             <br>
             <div class="text-center" data-toggle="modal" data-target="#myModal<%=photo.id%>">
               <span class="text-muted "><%= I18n.t(:click)%></span>
               </div>
            </div>

    </div>

</div>
</div>



<div class="modal fade" id="myModal<%=photo.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="text-white">
          <%= photo.name %></h6>
        <button type="button" class="close btn" data-dismiss="modal"><span aria-hidden="true" class="text-danger">Ã—</span></button>
      </div>
      <div class="modal-body ">

        <%= image_tag photo.photography.url%>

      </div>
    </div>
  </div>
</div>


<% end %>
</div>
<% end %>
